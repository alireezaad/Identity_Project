@model IEnumerable<Identity_Project.Areas.Admin.Models.DTOs.RoleDTOs.RoleListDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Roles List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="UsersInRole" asp-route-id="@item.Id" class="btn btn-primary">Users in role</a> 

            </td>
        </tr>
}
    </tbody>
</table>
<br />
<a asp-action="Create" class="btn btn-success">Create New Role</a>

