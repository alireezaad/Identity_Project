@using Identity_Project.Areas.Admin.Models.DTOs.UserDTOs;
@model UsersInRoleDTO
@{
    ViewData["Title"] = "UsersInRole";
}
<h1>Users in Role @Model.RoleName</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Full name
            </th>
            <th>
                Email
            </th>
            <th>
                Phonenumber
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname) @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phonenumber)
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

<p>
    <a asp-action="Index" class="btn btn-primary">Back to roles list</a>
</p>
